<Application
    x:Class="_1SemEksamen.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_1SemEksamen">

    <Application.Resources>
        <Style x:Name="MainPageGridStyle" TargetType="Grid">
            <Setter Property="Background" Value="BurlyWood"/>
        </Style>
        <Style x:Name="MainPageImageStyle" TargetType="Image">
            <Setter Property="Margin" Value="20,20,20,20"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style x:Name="HamburgerButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style x:Name="HamburgerText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Application.Resources>

</Application>
